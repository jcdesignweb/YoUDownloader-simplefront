<!-- Modal Structure -->
<div id="modalDownload" class="modal">
    <div class="modal-content">
        <h4 class="teal-text">Download from youtube</h4>
        <form class="">
            <div class="col s10" style="position: relative;">
                <input type="text" class="" id="downloaderUrl" name="downloaderUrl"
                    value="https://www.youtube.com/watch?v=W5ktiQUjbjA" />
                <div class="preloader-wrapper small active" style="display: none;">
                    <div class="spinner-layer spinner-green-only">
                        <div class="circle-clipper left">
                            <div class="circle"></div>
                        </div>
                        <div class="gap-patch">
                            <div class="circle"></div>
                        </div>
                        <div class="circle-clipper right">
                            <div class="circle"></div>
                        </div>
                    </div>
                </div>

            </div>

            

        </form>
    </div>
    <div class="modal-footer">
        <a id="btnDownload" class="col s2 waves-effect waves-light btn-small">Download</a>
    </div>
</div>